#myMenu
    position(fixed, 3vh, 20px, , 20px)
    width auto
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    z-index 10

    ul

        li
            display inline-block


.nav-link
    display inline-block
    margin 0 5px
    padding 10px 30px
    font-size 16px
    border-radius 5px
    font-weight bold
    color $white

    &:hover
        background-color $honey-flower


.logo
    font-family: 'Shrikhand', cursive;
    font-size 50px
    color $white

    &:hover
        color $honey-flower