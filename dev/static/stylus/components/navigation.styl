#myMenu
    position(fixed, 3vh, 20px, , 20px)
    width auto
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    z-index 10

    ul
        li
            display inline-block

            a
                display inline-block
                margin 0 5px
                padding 10px 30px
                font-size 16px
                border-radius 5px
                font-weight bold
                color $white
                background-color rgba(0, 0, 0, .2)

                &:hover
                    background-color $honey-flower


.logo
    font-family: 'Shrikhand', cursive;
    font-size 50px
    color $white

    &:hover
        color $honey-flower