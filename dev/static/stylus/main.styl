@import 'fonts.styl'
@import 'vars.styl'
@import 'libs.styl'
@import 'mixins.styl'

// pages
@import 'pages/index.styl'

// common styles
@import 'common_styles.styl'

// modules
@import 'modules/header.styl'
@import 'modules/services.styl'
@import 'modules/team.styl'
@import 'modules/skills.styl'
@import 'modules/portfolio.styl'
@import 'modules/testimonials.styl'
@import 'modules/footer.styl'

// components
@import 'components/navigation.styl'


// media
@import 'media.styl'


html
	line-height 1
	font-size 16px


body
	font-family 'Titillium Web', sans-serif


h1,h2,h3,h4,h5,h6
	margin 0


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color black
	transition 0.3s

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box