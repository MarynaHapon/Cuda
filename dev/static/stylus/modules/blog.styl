.testimonials
    background-color $cranberry


.blog-inner
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center


.blog-list
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center


.blog-item
    display flex
    flex-direction row
    justify-content space-between
    align-items flex-start
    margin 40px 30px 0


.blog-separator
    @extend .separator
    background-color $royal-heath


.blog-title
    font-size 40px
    text-align center

.blog-subtitle
    padding-bottom 20px
    max-width 70vw
    font-size 18px
    line-height 26px


.blog-title
.blog-subtitle
.blog-name
.blog-text
    color white


.blog-text-wrap
    margin-left 30px
    width 330px


.blog-text
    font-size 21px
    line-height 26px


.blog-name
    margin-top 20px
    font-size 24px


.blog-position
    color $cream-brulee
    line-height 20px
    font-size 18px


.blog-img
    size(75px)
    border-radius 100%