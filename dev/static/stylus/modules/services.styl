.services
    background-color $light-sea-green


.services-inner
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center


.services-title
.services-subtitle
    color $white
    text-align center


.services-subtitle
    padding-bottom 20px
    max-width 70vw
    font-size 18px
    line-height 26px


.services-separator
    @extend .separator
    background-color $mountain-meadow


.services-list
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content center


.services-item
    margin 30px 0
    width 250px
    text-align center
    color $white


.service-item-img
    size(auto, 70px)


.service-item-title
    font-size 24px
    padding 30px 0


.service-item-text
    font-size 16px
    line-height 24px
