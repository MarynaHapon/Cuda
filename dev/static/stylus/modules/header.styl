header
    background-color $vivid-violet
    color $white


.slogan-wrapper
    height 100%
    display flex
    justify-content space-around
    align-items center


.slogan-inner
    display flex
    flex-direction column
    align-items center


.header-chapter
    font-size 42px
    max-width 850px
    text-align center



.header-btn
    @extend .btn
    margin 60px 0 0 0
    background-color $jaffa
    box-shadow 0 9px $red-damask

    &:hover
        background-color $jaffa-tint

    &:active
        background-color $jaffa
        box-shadow 0 5px $red-damask-shade